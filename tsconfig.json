{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "esModuleInterop": true, // 允许export=导出，由import from 导入
    "outDir": "dist", // 指定输出目录
    "declaration": true // 生成声明文件，开启后会自动生成声明文件
  },
  "include": ["src"], // 指定被编译文件所在的目录。
  "exclude": ["node_modules", "dist"] // 提供用于禁用 JavaScript 项目中某个模块的类型获取的配置
}
